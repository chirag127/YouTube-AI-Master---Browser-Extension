{
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "warn",
    "no-empty": "warn",
    "no-useless-escape": "warn"
  },
  "globals": {
    "chrome": "readonly"
  },
  "ignorePatterns": ["extension/dist/**", "node_modules/**"]
}
